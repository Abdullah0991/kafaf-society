// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model News {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  date        DateTime
  image       String?
  createdAt   DateTime @default(now())

  @@map(name: "news")
}

model Campaigns {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  target      Int      @default(0)
  cash        Int      @default(0)
  image       String?
  createdAt   DateTime @default(now())

  @@map(name: "campaigns")
}

model Statistics {
  id        String   @id @default(uuid())
  medical   Int      @default(0)
  food      Int      @default(0)
  activity  Int      @default(0)
  logistic  Int      @default(0)
  clothes   Int      @default(0)
  emergency Int      @default(0)
  createdAt DateTime @default(now())

  @@map(name: "statistics")
}

model Services {
  id          String  @id @default(uuid())
  type        Int
  title       String
  description String?
  mediaUrl    String

  @@map(name: "services")
}

model Tasks {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  target      Int      @default(0)
  cash        Int      @default(0)
  image       String?
  mediaUrl    String?
  createdAt   DateTime @default(now())

  @@map(name: "tasks")
}
